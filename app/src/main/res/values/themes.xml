<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Petsitternow_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary</item>

        <!-- Secondary (même palette que primary pour éviter le mauve) -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/primary_light</item>
        <item name="colorOnSecondaryContainer">@color/primary</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/primary</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/primary_light</item>
        <item name="colorOnTertiaryContainer">@color/primary</item>

        <!-- Surface & Background -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Outline (bordures des TextInputLayout, etc.) -->
        <item name="colorOutline">@color/border</item>
        <item name="colorOutlineVariant">@color/border</item>

        <!-- Error -->
        <item name="colorError">#EF4444</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">#FEE2E2</item>
        <item name="colorOnErrorContainer">#991B1B</item>

        <!-- Force widget styles to use our colors -->
        <item name="textInputStyle">@style/App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/App.MaterialButton</item>
        <item name="checkboxStyle">@style/App.Checkbox</item>
        <item name="radioButtonStyle">@style/App.RadioButton</item>
        <item name="switchStyle">@style/App.Switch</item>
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/border</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">#1A3B82F6</item>

        <!-- Status bar styling -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Petsitternow_app" parent="Base.Theme.Petsitternow_app" />

    <!-- TextInputLayout : force blue borders and hints -->
    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">#EF4444</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="cursorColor">@color/primary</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <!-- MaterialButton : force blue tint -->
    <style name="App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <!-- Checkbox -->
    <style name="App.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/primary</item>
    </style>

    <!-- RadioButton -->
    <style name="App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/primary</item>
    </style>

    <!-- Switch -->
    <style name="App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/primary</item>
    </style>

    <!-- Bottom Navigation Active Indicator Style -->
    <style name="BottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_light</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
    </style>
</resources>