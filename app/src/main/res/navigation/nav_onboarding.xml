<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onboarding"
    app:startDestination="@id/step1Fragment">

    <fragment
        android:id="@+id/step1Fragment"
        android:name="www.com.petsitternow_app.ui.onboarding.Step1Fragment"
        android:label="Étape 1"
        tools:layout="@layout/fragment_onboarding_step1">
        <action
            android:id="@+id/action_step1_to_step2"
            app:destination="@id/step2Fragment" />
    </fragment>

    <fragment
        android:id="@+id/step2Fragment"
        android:name="www.com.petsitternow_app.ui.onboarding.Step2Fragment"
        android:label="Étape 2"
        tools:layout="@layout/fragment_onboarding_step2">
        <action
            android:id="@+id/action_step2_to_step3"
            app:destination="@id/step3Fragment" />
    </fragment>

    <fragment
        android:id="@+id/step3Fragment"
        android:name="www.com.petsitternow_app.ui.onboarding.Step3Fragment"
        android:label="Étape 3"
        tools:layout="@layout/fragment_onboarding_step3" />

</navigation>

