<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardActiveMission"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Status Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:id="@+id/viewStatusBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_walk_status_assigned" />

                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_directions_walk"
                    app:tint="#9C27B0" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="En route vers le client"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvStatusSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dirigez-vous vers l'adresse indiquee"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Timer (visible pendant WALKING/RETURNING) -->
        <LinearLayout
            android:id="@+id/layoutTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_walk_status_walking"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_timer"
                app:tint="#4CAF50" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0:00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Distance Card (visible pendant RETURNING) -->
        <LinearLayout
            android:id="@+id/layoutDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_walk_status_returning"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance du point de depart"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500m"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDistanceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt; 100m requis"
                android:textSize="12sp"
                android:textColor="@color/text_muted" />

        </LinearLayout>

        <!-- Owner Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_pet_photo_circle" />

                <TextView
                    android:id="@+id/tvOwnerInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="M"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Marie Martin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvPetNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Max, Bella"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@drawable/ic_pets"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/text_muted" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="123 Rue de Paris"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Walk Tracking Map Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background_light" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Open in Maps button (always visible) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenMaps"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Ouvrir dans Maps"
                android:textSize="14sp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_location"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Start Walk button (ASSIGNED status) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartWalk"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:text="J'ai recupere le chien"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                android:visibility="gone" />

            <!-- Mark Returning button (WALKING status) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarkReturning"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:text="Je ramene le chien"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                app:cornerRadius="12dp"
                android:visibility="gone" />

            <!-- Complete Mission button (RETURNING status) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteMission"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:text="Mission terminee"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                app:cornerRadius="12dp"
                android:visibility="gone" />

            <!-- Rate Owner button (COMPLETED status) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRateOwner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:text="Noter le proprietaire"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_star"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:visibility="gone" />

            <!-- Dismiss button (COMPLETED status) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDismissMission"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Fermer"
                android:textSize="14sp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="12dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
